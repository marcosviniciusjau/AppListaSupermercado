<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.EditarProduto"
          BackgroundColor="DarkOliveGreen">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>

            <Label Text="Nome Produto:" TextColor="White"/>
            <Entry x:Name="txt_descricao" Text="{Binding NomeProduto}" TextColor="White" />

            <Label Text="Quantidade:" TextColor="White"/>
            <Entry x:Name="txt_quantidade" Text="{Binding Quantidade}"  TextColor="White" />
            
            <Label Text= "Preço Unitário" TextColor="White" />
            <Entry x:Name="txt_preco_unitario"  Text="{Binding PrecoUnit}" TextColor="White"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>